@model WebNotes_Entities.tbArquivo

@{
    ViewBag.Title = "Mural";
}

<ul class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="#">Painel</a></li>
    <li><a href="#">Mural</a></li>
    <li>Formulario</li>
</ul>

<div class="well well-lg">
    <div class="row">
        <div class="col-md-12 col-lg-12 col-xs-12">

            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="panel panel-default">

                    <div class="panel-heading" style="background-color: purple; color: white; font-weight: bolder; text-align: center;">
                        Formulario de dados - Mural
                    </div>

                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-lg-10 col-xs-10 col-md-10">
                                <input type="file" id="Arquivos" name="Arquivos" class="filestyle form-control" data-buttontext="Upload" data-placeholder="Selecione um arquivo de foto" multiple>
                            </div>

                            <div class="col-lg-1 col-xs-1 col-md-1">
                                <input type="submit" name="btnEnviar" id="btnEnviar" class="btn btn-success" value="Importar Foto" />
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="row">
                <div class="col-lg-12">
                    <div id="divTable" class="custyle" style="height:auto; margin-top:2px"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {

        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-bottom-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }

        $(":file").filestyle({ buttonText: "Upload", placeholder: "Selecione um arquivo" });
        $("#divTable").load('@(Url.Action("_Mural", "Home", null, Request.Url.Scheme))');

        var mensagem = '@ViewBag.Message';

        if (mensagem != '' && mensagem != null) {
            toastr.success(mensagem, 'WebEventos');
        }
    });
</script>
