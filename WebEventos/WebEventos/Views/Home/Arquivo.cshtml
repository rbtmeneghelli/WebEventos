@model Cl_Entities.tbArquivo

@{
    ViewBag.Title = "Arquivo";
}

<ul class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="#">Painel</a></li>
    <li><a href="#">Arquivo</a></li>
    <li>Formulario Arquivo</li>
</ul>

<div class="well well-lg">
    <div class="row">
        <div class="col-md-12 col-lg-12 col-xs-12">

            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="panel panel-default">

                    <div class="panel-heading" style="background-color: dodgerblue; color: white; font-weight: bolder; text-align: center;">
                        Formulario de dados - Arquivo
                    </div>

                    <div class="panel-body">

                        <div class="form-group" style="margin-top: 10px;">
                            <div class="col-md-4">
                                @Html.LabelFor(Model => Model.tbArquivo_Titulo, "Titulo do arquivo")
                                @Html.TextBoxFor(Model => Model.tbArquivo_Titulo, new { @class = "form-control", @style = "max-width: 100% !important;", @name = "txtTitulo", id = "txtTitulo" })
                            </div>

                            <div class="col-md-4">
                                @Html.LabelFor(Model => Model.tbArquivo_Descricao, "Descrição do arquivo")
                                @Html.TextBoxFor(Model => Model.tbArquivo_Descricao, new { @class = "form-control", @style = "max-width: 100% !important;", @name = "txtDesc", id = "txtDesc" })
                            </div>

                            <div class="col-md-4">
                                @Html.LabelFor(Model => Model.tbArquivo_DataEntrega, "Data de entrega")
                                @Html.TextBoxFor(Model => Model.tbArquivo_DataEntrega, new { @class = "form-control", @style = "max-width: 100% !important;", @name = "txtData", id = "txtData" })
                            </div>
                        </div>

                        <div class="form-group" style="margin-top: 10px;">
                            <div class="col-md-4">
                                @Html.LabelFor(Model => Model.tbEvento_Id, "Evento")
                                @Html.DropDownListFor(Model => Model.tbEvento_Id, (SelectList)ViewBag.ListaEvento, new { @class = "form-control dropdown", @name = "ddEvento", id = "ddEvento" })
                            </div>

                            <div class="col-md-4">
                                @Html.LabelFor(Model => Model.tbPalestra_Id, "Palestra")
                                @Html.DropDownListFor(Model => Model.tbPalestra_Id, (SelectList)ViewBag.ListaPalestra, new { @class = "form-control dropdown", @name = "ddPalestra", id = "ddPalestra" })
                            </div>

                            <div class="col-md-4">
                                @Html.LabelFor(Model => Model.tbUsuario_Id, "Responsavel")
                                @Html.DropDownListFor(Model => Model.tbUsuario_Id, (SelectList)ViewBag.ListaUsuario, new { @class = "form-control dropdown", @name = "ddResp", id = "ddResp" })
                            </div>
                        </div>

                        <div class="form-group" style="margin-top: 10px;">
                            <div class="col-lg-12 col-xs-12 col-md-12">
                                <input type="file" id="Arquivos" name="Arquivos" class="filestyle form-control" data-buttontext="Upload" data-placeholder="Selecione um arquivo de foto" multiple>
                            </div>
                        </div>

                        <div style="float: right !important;">
                            <a href="@Url.Action("ListArquivo","Home")" class="btn" style="background-color: dodgerblue; color: white;"> <i class="fa fa-arrow-left"> Voltar</i></a>
                            <button type="button" class="btn limpar" value="Cancelar" style="background-color: dodgerblue; color: white;"> <i class="fa fa-eraser"> Cancelar</i></button>
                            <button type="submit" class="btn" name="btnEnviar" id="btnEnviar" value="Importar arquivo" style="background-color: dodgerblue; color: white;"> <i class="fa fa-save"> Importar arquivo</i></button>
                        </div>                       
                    </div>
                </div>
            }

            <div class="row">
                <div class="col-lg-12">
                    <div id="divTable" class="custyle" style="height:auto; margin-top:2px"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {

        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-bottom-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }

        $(":file").filestyle({ buttonText: "Upload", placeholder: "Selecione um arquivo" });

        var mensagem = '@ViewBag.Message';

        if (mensagem != '' && mensagem != null) {
            toastr.success(mensagem, 'WebEventos');
        }
    });
</script>
