@model IEnumerable<Cl_Entities.tbArea>

@{
    ViewBag.Title = "Area";
}

<ul class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="#">Lista</a></li>
    <li>Area</li>
</ul>

<div class="well well-lg text-center">

    <div class="panel panel-default">
        <div class="panel-heading" style="background-color: dodgerblue; color: white; font-weight: bolder; text-align: center;">
            Lista de dados
            @Html.ActionLink(" ", "AreaLayout", new { idData = 0, idAction = 1 }, new { @class = "fa fa-plus", @style = "border: 0px; text-decoration:none; color: white;", @title = "Inserir" })
            @Html.ActionLink(" ", "ExportToExcel", new { stOpcao = "Area" }, new { @class = "fa fa-file-excel-o", @style = "border: 0px; text-decoration:none; color: white;", @title = "Exportar para Excel" })
            @Html.ActionLink(" ", "ExportToPdf", new { stOpcao = "Area" }, new { @class = "fa fa-file-pdf-o", @style = "border: 0px; text-decoration:none; color: white;", @title = "Exportar para Pdf" })
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-condensed" id="tbArea">
                    <thead>
                        <tr>
                            <td>Descrição</td>
                            <td>Status</td>
                            <td>Ações</td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            foreach (var item in Model.OrderBy(x => x.tbArea_Descricao))
                            {
                                <tr>
                                    <td>@item.tbArea_Descricao</td>
                                    <td>@item.tbArea_Ativo</td>
                                    <td>
                                        @Html.ActionLink(" ", "AreaLayout", new { idData = @item.tbArea_Id, idAction = 2 }, new { @class = "glyphicon glyphicon-edit text-success", @style = "border:0px;  text-decoration:none; ", @title = "Alterar" })
                                        @Html.ActionLink(" ", "AreaLayout", new { idData = @item.tbArea_Id, idAction = 3 }, new { @class = "glyphicon glyphicon-trash text-danger", @style = "border:0px;  text-decoration:none; ", @title = "Excluir" })
                                        @Html.ActionLink(" ", "AreaLayout", new { idData = @item.tbArea_Id, idAction = 4 }, new { @class = "glyphicon glyphicon-search text-info", @style = "border:0px;  text-decoration:none; ", @title = "Vizualizar" })
                                    </td>
                                </tr>
                            }
                         }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

